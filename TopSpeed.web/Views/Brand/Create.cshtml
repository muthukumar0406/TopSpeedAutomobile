@model Brand

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Create Brand</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="md-3 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="md-3 mb-3">
                    <label asp-for="EstablishedYear" class="form-label"></label>
                    <input asp-for="EstablishedYear" class="form-control" />
                    <span asp-validation-for="EstablishedYear" class="text-danger"></span>
                </div>

                <div class="md-3 mb-3">
                    <label asp-for="BrandLogo" class="form-label"></label>
                    <input type="file" asp-for="BrandLogo" class="form-control" />
                    <span asp-validation-for="BrandLogo" class="text-danger"></span>
                </div>

                <div class="md-3 mb-4">
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                    <button class="btn btn-success ms-lg-3" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
